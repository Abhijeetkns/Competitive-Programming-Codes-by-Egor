<idea-plugin version="2">
  <name>Contest helper</name>
  <description>Helps to integrate your library code into your solutions and to test them</description>
  <version>1.0</version>
  <vendor>Egor Kulikov (egor@egork.net)</vendor>
  <idea-version since-build="8000"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="newTask" class="net.egork.plugin.NewTask" text="New Task" icon="/icons/newtask.png"/>
      <action id="runTask" class="net.egork.plugin.RunTask" text="Run Task" icon="/icons/runtask.png"/>
      <action id="taskList" class="net.egork.plugin.TaskList" text="Task List" icon="/icons/select.png"/>
      <action id="deleteTask" class="net.egork.plugin.DeleteTask" text="Delete Task" icon="/icons/delete.png"/>
      <action id="archiveTask" class="net.egork.plugin.ArchiveTask" text="Archive Task" icon="/icons/archive.png"/>
      <action id="editTests" class="net.egork.plugin.EditTests" text="Edit Tests" icon="/icons/edit.png"/>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>